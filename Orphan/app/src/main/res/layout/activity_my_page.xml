<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b1"
    android:orientation="vertical"
    tools:context=".MyPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/backtoboard"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
            android:text="Home"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="213dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginEnd="110dp"
                        android:gravity="center"
                        android:text="김민수"
                        android:textColor="@color/pink"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_vertical"
                        android:text="회원탈퇴"
                        android:textSize="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="김민수" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/milk"
                        android:gravity="center"
                        android:text="성별" />

                    <View
                        android:id="@+id/divider17"
                        android:layout_margin="8dp"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pink" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="118dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/milk"
                        android:gravity="center"
                        android:text="전화번호" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_layout2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="프로필 메세지"
            android:textColor="@color/pink" />

        <View
            android:id="@+id/divider24"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"

            android:background="@color/pink" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="63dp"
            android:textColor="@color/milk"
            android:text="0" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="16dp"

            android:text="수정" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/milk"
                android:text="내가 참여중인 프로젝트" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="0" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/milk"
                android:text="개" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/milk"
                android:text="내가 지원한 프로젝트" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/pink"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/milk"
                android:text="개" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView39"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:text="개인정보 수정" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="63dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:text="Phone Number"
            android:gravity="center_vertical"
            android:textColor="@color/pink"
            android:textSize="16dp"></TextView>

        <EditText
            android:id="@+id/regphone"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:backgroundTint="@color/pink" />

        <EditText
            android:id="@+id/rephone2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:backgroundTint="@color/pink" />

        <EditText
            android:id="@+id/regphone2"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:backgroundTint="@color/pink" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button12"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:textColor="@color/milk"
            android:background="@drawable/custom_button"
            android:text="CHECK" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:text="Nickname"
            android:textSize="16dp"
            android:textColor="@color/pink"></TextView>

        <EditText
            android:id="@+id/regnick"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16dp"
            android:ems="10"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:backgroundTint="@color/pink"
            android:hint="Please set your Nickname."
            android:textColorHint="@color/milk" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button13"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:textColor="@color/milk"
            android:background="@drawable/custom_button"
            android:text="CHECK" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/milk"
        android:text="Change password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/milk"
        android:text="Save difference" />
</LinearLayout>