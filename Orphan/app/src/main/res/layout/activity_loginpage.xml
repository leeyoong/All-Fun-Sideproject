<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#283149"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Loginpage">


    <TextView
        android:id="@+id/logtitle"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="Login"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#F73859" />

    <EditText
        android:id="@+id/idname"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="@color/pink"
        android:ems="10"
        android:hint="ID"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:inputType="textPersonName"
        android:textColorHighlight="#F73859"
        android:textColorHint="#DBEDF3"
        android:textColorLink="#F73859" />

    <EditText
        android:id="@+id/passname"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:backgroundTint="@color/pink"
        android:colorAccent="#F73859"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHighlight="#F73859"
        android:textColorHint="#DBEDF3"
        android:textColorLink="#F73859" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@null"
        android:text="Log in"
        android:textColor="#DBEDF3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@null"
        android:text="Register"
        android:textColor="#DBEDF3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center">

        <TextView
            android:id="@+id/idfound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="아이디 찾기"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#DBEDF3" />

        <TextView
            android:id="@+id/passfound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:text="비밀번호 재설정"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#DBEDF3" />
    </LinearLayout>


</LinearLayout>