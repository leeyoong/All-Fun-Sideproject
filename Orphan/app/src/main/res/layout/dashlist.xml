<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashtouch"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/custom_layout2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@drawable/custom_layout4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="340dp">

            <ImageView
                android:id="@+id/dashfix"
                android:layout_width="68dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_more_vert_24" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dashtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="4dp"
        android:text="해커톤 ALL-Fun project"
        android:textColor="@color/teal_200"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dashtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:text="해커톤 ALL-Fun project"
        android:textColor="@color/teal_700"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_gravity="left
"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dashalarm"
            android:layout_width="70dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_baseline_notifications_none_24" />

        <ImageView
            android:id="@+id/dashass"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_assignment_24" />
    </LinearLayout>
</LinearLayout>