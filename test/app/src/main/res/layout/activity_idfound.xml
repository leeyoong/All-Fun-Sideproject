<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".idfound">

    <Button
        android:id="@+id/idtopassbutton"
        android:layout_width="370"
        android:layout_height="wrap_content"
        android:text="Password forgot?"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="606dp" />

    <Button
        android:id="@+id/idtologinbutton"
        android:layout_width="370"
        android:layout_height="wrap_content"
        android:text="Go to Log in"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="667dp" />

    <TextView
        android:id="@+id/idforgottitle2"
        android:layout_width="370"
        android:layout_height="60"
        android:text="ID forgot?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here's your account."
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="112dp" />
</androidx.constraintlayout.widget.ConstraintLayout>