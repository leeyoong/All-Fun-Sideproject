        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="172dp" />

    <EditText
        android:id="@+id/regmailcert"
        android:layout_width="280dp"
