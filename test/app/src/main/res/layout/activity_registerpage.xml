        tools:layout_editor_absoluteY="315dp" />

    <CheckBox
        android:id="@+id/malebox"
        android:layout_width="120"
        android:layout_height="60"
        android:text="Male"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
